{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:vue/vue3-recommended"],
    "rules": {
        "semi": "error",
        "no-multiple-empty-lines": ["warn", { "max": 2, "maxBOF": 1 }],
        "vue/component-definition-name-casing": ["error", "kebab-case"],
        "vue/prop-name-casing": ["error", "snake_case"]
    },
    "globals": {
        "Vue": "readonly",
        "Vuex": "readonly",
        "VueRouter": "readonly",
        "axios": "readonly",
        "luxon": "readonly",
        "_": "readonly"
    }
}
